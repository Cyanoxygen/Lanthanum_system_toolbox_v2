!model
    class=main
    !view
        view=title
              text=switch测试
              @show
              echo true
              @show
    !view
    !view
              view=switch
              text=测试
              @show
                  echo true
              @show
              @click
                 if [ $switch == 1 ]
                 then
                 echo true
                 else
                 reboot
                 fi
              @click
     !view
     !view
        view=button
        text=重启
        @show
        echo true
        @show
        @click
        reboot
        @click
        core=true
     !view

!model